{
  "name": "room-assistant",
  "version": "2.13.0",
  "slug": "room_assistant",
  "description": "Presence tracking and more for automation on the room-level",
  "url": "https://www.room-assistant.io",
  "stage": "stable",
  "advanced": false,
  "startup": "application",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "image": "mkerix/room-assistant-{arch}",
  "boot": "auto",
  "services": [
    "mqtt:want"
  ],
  "apparmor": false,
  "host_network": true,
  "host_dbus": true,
  "gpio": true,
  "privileged": [
    "NET_ADMIN"
  ],
  "ports": {
    "6415/tcp": null,
    "6425/udp": 6425
  },
  "ports_description": {
    "6415/tcp": "HTTP API",
    "6425/udp": "Internal communication between instances"
  },
  "options": {
    "global": {
      "instanceName": "mio",
      "integrations": [
        "homeAssistant"
      ]
    },
    "cluster": {
      "peerAddresses": []
    },
    "bluetoothLowEnergy": {
      "allowlist": [],
      "denylist": []
    },
    "bluetoothClassic": {
      "addresses": []
    },
    "omronD6t": {},
    "gridEye": {},
    "homeAssistant": {}
  },
  "schema": {
    "global": {
      "instanceName": "str",
      "integrations": ["str"]
    },
    "cluster": {
      "networkInterface": "str?",
      "port": "port?",
      "timeout": "int(1,)?",
      "weight": "int?",
      "quorum": "int(1,)?",
      "autoDiscovery": "bool?",
      "peerAddresses": ["str?"]
    },
    "bluetoothLowEnergy": {
      "hciDeviceId": "int(0,)?",
      "allowlist": ["str?"],
      "allowlistRegex": "bool?",
      "denylist": ["str?"],
      "denylistRegex": "bool?",
      "processIBeacon": "bool?",
      "onlyIBeacon": "bool?",
      "majorMask": "int?",
      "minorMask": "int?",
      "batteryMask": "int?",
      "timeout": "int(1,)?",
      "updateFrequency": "int(0,)?",
      "maxDistance": "int?",
      "whitelist": ["str?"]
    },
    "bluetoothClassic": {
      "addresses": ["str?"],
      "hciDeviceId": "int(0,)?",
      "interval": "int(1,)?",
      "scanTimeLimit": "int(1,)?",
      "timeoutCycles": "int(1,)?",
      "preserveState": "bool?",
      "inquireFromStart": "bool?"
    },
    "omronD6t": {
      "busNumber": "int(0,)?",
      "address": "int?",
      "deltaThreshold": "float?"
    },
    "gridEye": {
      "busNumber": "int(0,)?",
      "address": "int?",
      "deltaThreshold": "float?"
    },
    "homeAssistant": {
      "mqttUrl": "str?",
      "sendAttributes": "bool?",
      "mqttOptions": {
        "username": "str",
        "password": "str?"
      }
    }
  }
}
